<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="seq_service" model="ir.sequence">
            <field name="name">Réference du service</field>
            <field name="code">seq.service.sequence</field>
            <field name="active">TRUE</field>
            <field name="prefix">Ser/</field>
            <field name="padding">7</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
        <record id="view_pos_service_form" model="ir.ui.view">
            <field name="name">pos.service.form</field>
            <field name="model">pos.service</field>
            <field name="arch" type="xml">
                <form string="Service" edit="true" create="true">
                    <sheet>
                        <group col="4" colspan="4">
                            <field name="name" />
                            <field name="reference"/>
                        </group>
                  
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_pos_service_tree" model="ir.ui.view">
            <field name="name">pos.service.tree</field>
            <field name="model">pos.service</field>
            <field name="arch" type="xml">
                <tree string="Service" create='true' edit="true">
                    <field name="reference"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="pos_service_action" model="ir.actions.act_window">
            <field name="name">Service</field>
            <field name="res_model">pos.service</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                 <p class="oe_view_nocontent_create">
                    Créer votre premier service.
                 </p>
            </field>
        </record>
        <record id="view_pos_order_search" model="ir.ui.view">
            <field name="name">pos.service.search.view</field>
            <field name="model">pos.service</field>
            <field name="arch" type="xml">
                <search string="Service">
                    <field name="name"/>
                    <field name="reference"/>
                    <group expand='0' string='Filters'>
                        <filter name="reference"
                                string="Réference"
                                />
                        <filter name="name"
                                string="Nom du service"
                                />
                     </group>
                </search>
            </field>
        </record>

        <menuitem id="menu_service" parent="point_of_sale.menu_point_config_product" name="Service" action="pos_service_action" groups="point_of_sale.group_pos_user,point_of_sale.group_pos_manager"/>            
    </data>
</odoo>