<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="FactureDetails" owl="1">
        <div class="ticket-screen screen">
            <div class="screen-facture">
                <div class="controls">
                    <div class="buttons_back">
                        <button class="button back" style="border-radius:22px" t-on-click="showScreen('FacturesNonPayee')">
                            <i class="fa fa-angle-double-left fa-fw"></i>
                            <span class="back_text">Retour</span>
                        </button>  
                    </div>
                        <div class="button_brouillon_fact_btn">
                                 <button class='button button_brouillon_fact' title="Modifier" t-on-change="captureChange" style="right:100%; background-color: #875a7b; color:white; border-radius:22px; margin:5px;" t-on-click="remettre_en_brouillon( props.facture_selected.id)" >
                                   Remettre en brouillon
                                </button>
                            </div>
                            <div class="button_confirm_fact_btn">
                                <button class='button button_confirm_fact' title="Modifier" style="right:100%; background-color: #43996E; color:white; margin:5px; border-radius:22px"  t-on-change="captureChange" t-on-click="confirmer_facture( props.facture_selected.id )" >
                                   Confirmer
                                </button>
                            </div>
                            <div class="button_enreg_paiement_btn">
                                <button class='button button_enreg_paiement' title="Enregistrer le paiement" style="right:100%; background-color: #43996E; color:white;border-radius:22px;margin:5px" t-on-change="captureChange" t-on-click="enregistrer_paiement(  props.facture_selected.id)">
                                   Enregistrer le paiement
                                </button>
                            </div>
                    </div>
                <div class="client-select" style="font-size: 24px; font-weight: bold; margin: 20px">
                    <table style="margin:auto">
                        <tr>
                            <td style=" padding-bottom: 1em;">
                                <span class="label">Référence  :</span>
                            </td>
                            <td style=" padding-bottom: 1em;">
                                
                                <input class="detail mntnt" id="ref_fact" name="montant_du" t-att-value="props.facture_selected.name || ''" readonly="1" style="font-size: 22px; border:none; "/>
                            </td>
                        </tr>
                        <tr>
                            <td style=" padding-bottom: 1em;">
                                <span class="label">date de facturation :</span>
                            </td>
                            <td style=" padding-bottom: 1em;">
                                <input class="detail mntnt" name="montant_du" t-att-value="getDate(props.facture_selected) || ''" readonly="1" style="font-size: 22px; border:none;"/>
                            </td>
                        </tr>
                        <tr>
                            <td style=" padding-bottom: 1em;">
                               <span class="label">date d'échéance  :</span>
                            </td>
                            <td style=" padding-bottom: 1em;">
                                <input class="detail mntnt" name="montant_du" t-att-value="getDateEcheance(props.facture_selected) || ''" readonly="1" style="font-size: 22px; border:none;"/>
                            </td>
                        </tr>
                        <tr>
                            <td style=" padding-bottom: 1em;">
                               <span class="label">Etat du paiement  :</span>
                            </td>
                            <td style=" padding-bottom: 1em;">
                                <input class="detail mntnt" id="etat_paiement" name="montant_du" t-att-value="get_payment_state(props.facture_selected) || ''" readonly="1" style="font-size: 22px; border:none;"/>
                            </td>
                        </tr>
                        <tr>
                            <td style=" padding-bottom: 1em;">
                               <span class="label">Statut  :</span>
                            </td>
                            <td style=" padding-bottom: 1em;">
                                <input class="detail mntnt" id="statut_fact" name="statut_facture" t-att-value="get_payment_statut(props.facture_selected) || ''" readonly="1" style="font-size: 22px; border:none;"/>
                            </td>
                        </tr>
                        <tr>
                            <td style=" padding-bottom: 1em;">
                              <span class="label">Montant total facture:</span>
                            </td>
                            <td style=" padding-bottom: 1em;">
                                <input class="detail mntnt" id="montant_total" name="montant_total" t-att-value="props.facture_selected.amount_total.toFixed(2) || '0'" readonly="1" style="font-size: 22px; border:none; "/>
                            </td>
                        </tr>
                        <tr>
                            <td style=" padding-bottom: 1em;">
                                <span class="label">Montant dû :</span>
                            </td>
                            <td style=" padding-bottom: 1em;">
                                <input class="detail mntnt" id="amount_residual" name="montant_du" t-att-value="props.facture_selected.amount_residual.toFixed(2) || '0'" readonly="1" style="font-size: 22px; border:none;"/>
                            </td>
                        </tr>
                        <tr>
                            <td style=" padding-bottom: 1em; color: #43996E">
                               <span class="label">Client  :</span>
                            </td>
                            <td style=" padding-bottom: 1em; color: #43996E">
                            <select class='detail needsclick' name='client_recuperes_id' t-on-change="captureChange" style="color: #43996E; font-size: 22px; border:none;">
                            <t t-foreach='env.pos.client_recuperes' t-as='client_recuperes' t-key="client_recuperes.id">
                                <option t-att-value='client_recuperes.id'
                                    t-att-selected="props.facture_selected.partner_id ? 
                                    ((client_recuperes.id === props.facture_selected.partner_id[0]) ? true : undefined) : undefined">
                                    <t t-esc='client_recuperes.name'/>
                                </option>
                            </t>
                        </select>
                        </td>
                    </tr>
                </table>
               </div>
            </div>
        </div>
    </t>
</templates>


